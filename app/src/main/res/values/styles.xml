<resources>

    <style name="AppThemeLightSide" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="android:colorBackground">@color/lightBackground</item>
        <item name="colorPrimaryDark">@color/lightPrimaryDark</item>
        <item name="colorAccent">@color/lightAccent</item>
        <item name="colorButtonNormal">@color/lightAccent</item>
    </style>

    <style name="AppThemeDarkSide" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="android:colorBackground">@color/darkPrimaryBackground</item>
        <item name="colorPrimaryDark">@color/darkPrimaryDark</item>
        <item name="colorAccent">@color/darkPrimaryAccent</item>
        <item name="colorButtonNormal">@color/darkPrimaryAccent</item>
    </style>

    <style name="AppTheme">@style/AppThemeLightSide</style>

</resources>
